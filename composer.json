{
    "name": "laasti/views",
    "description": "A HTTP Message compatible template engine abstraction.",
    "type": "library",
	"keywords": ["templates", "templating", "psr-7", "psr", "http", "message", "laasti"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sonia Marquette",
            "email": "contact@nebulousweb.com",
            "homepage": "http://nebulousweb.com/",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/laasti/views/issues",
        "wiki": "https://github.com/laasti/views/wiki"
    },
    "require": {
        "php" : "~5.6|~7.0",
        "psr/http-message": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3",
        "zendframework/zend-diactoros": "1.3.3",
        "mustache/mustache": "~2.9.0"
    },
    "suggest": {
    },
    "autoload": {
        "psr-4": {
            "Laasti\\Views\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
